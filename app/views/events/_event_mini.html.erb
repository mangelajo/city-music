
<article class="media">
  <div class="media-left datetime">
    <div class="month"><%= event_date.month_s %></div>
    <div class="day"><%= event_date.date.day  %></div>
    <div class="year"><%= event_date.date.year  %></div>
    <p class="time"><%= event_date.date.to_s(:time) %></p>
  </div>
  <div class="media-left">
    <% if event.images.attached? %>
      <%= image_tag event.images[0].variant(resize_to_limit: [100, 100]) %>
    <% end  %>

  </div>
  <div class="media-content pad-top">
    <p class="subtitle is-6 is-spaced is-marginless"><a href="<%= band_path event.band %>"><%= event.band.name %></a></p>
    <p class="subtitle is-6 is-spaces is-marginess"> <%= event.name %></p>
    <p class="subtitle is-6 is-spaces is-marginess"> <span class="icon"><i class="fas fa-map-marker-alt"></i></span><%= event.venue.name %></p>
  </div>

  <%= event.description %>
  <div class="media-right pad-top"> <%= event.price_min %>â‚¬</div>
</article>
